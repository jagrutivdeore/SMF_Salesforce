                {
                    user.Approver_Comment__c = '';
                }
               update user;
                
                user = [Select MV_User__r.Name,Is_Approved__c from MV_User__c where id =: user.id];
                //------------------------------Start Notification Swarupa---------------------------------------
                 List<String> userApprovalList = new List<String>();
               // System.debug('********************************Notification**');
                 userApprovalList.add(user.Id);
                 
                if(!Test.isRunningTest())
                { 
                 if(user.Is_Approved__c == true)
                 {
                     // System.debug('********************************Approved**');
                  sendMultipleNotificationMsg.submitdata(userApprovalList,'User Approval ',' You are approved by '+user.MV_User__r.Name);
                  }   
                 else
                  {   
                     // System.debug('********************************Reject**');
                  sendMultipleNotificationMsg.submitdata(userApprovalList,'User Approval ','Your request is rejected by '+user.MV_User__r.Name); 
                  }
                 }
                //------------------------------End Notification Swarupa---------------------------------------
                
                mapResponse.put('responce',output);
                res.responseBody = Blob.valueOf(JSON.serialize(mapResponse));
            }catch(System.CalloutException e) {
                system.debug('Exception is' + e.getMessage());
