global class WS_InsertBroadcastPost {
    
  @HttpPost
    global static void AddVisitData(){
        RestRequest req = RestContext.request;
        RestResponse res = RestContext.response;
        res.addHeader('Content-Type', 'application/json'); 
        
       
        Map<String,String> mapResponse1 = new Map<String,String>();
        dataList mVisitsData = new dataList();
        system.debug('test-----------'+req.requestBody.toString());
        mVisitsData = (dataList)JSON.deserialize(req.requestBody.toString(),dataList.class);
        system.debug('test-----------'+ mVisitsData);
        List<AttachmentMapping> attachments = mVisitsData.attachments;
        //system.debug('test-----------'+attachments);
        List<Attachment> attsToInsert = new List<Attachment>();
      
    try{
            MV_Content__c con = new MV_Content__c();
            con.District__c= mVisitsData.District;
            con.Taluka__c= mVisitsData.taluka;
            con.Title__c = mVisitsData.Title;
            con.Description__c = mVisitsData.Description;
            con.State__c = mVisitsData.state;
            con.Broadcase_Role__c = mVisitsData.role;
            con.Is_Broadcast__c = true;
            insert con;
            if(attachments != null){
                for(AttachmentMapping am : attachments){
                    Attachment at = new Attachment();
                    at.Name = am.Name;
                    at.Body = EncodingUtil.base64Decode(am.Body);
                    at.ParentId = con.Id;
                    at.ContentType = am.ContentType;
                    attsToInsert.add(at);
                } 
                if(attsToInsert.size() > 0){
                    insert attsToInsert;
                }
            }
            mapResponse1.put('Records', 'Success');
            res.responseBody = Blob.valueOf(JSON.serialize(mapResponse1));
        
        }catch(Exception e){
            res.responseBody = Blob.valueOf(JSON.serialize(e.getMessage()));
        }
    }
    
   global class dataList{
      String state;
      String district;
      String taluka;
      String title;
      String description;
      string role;
      List<AttachmentMapping> attachments;
      
    }
    
     global class AttachmentMapping{
        public string Name {get;set;}
        public string Body {get;set;}
        public string ParentId {get;set;} // will equal to Id In VisitField
        public string ContentType {get;set;} 
    }
     
